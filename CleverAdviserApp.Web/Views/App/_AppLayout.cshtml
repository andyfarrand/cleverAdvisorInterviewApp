<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Clever Adviser</title>
    <link rel="stylesheet" href="~/Content/dist/css/site.min.css" />
    <base href="/cleveradviser/" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="app">
    <div>
        @RenderBody()
    </div>

    <script src="~/Content/dist/js/vendor.min.js" type="text/javascript"></script>
    <script src="~/Content/dist/js/app.min.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
